  "main": "index.js",
  "scripts": {
    "start": "webpack --mode production && cross-env NODE_ENV=production node index.js",
    "dev:front": "cross-env NODE_ENV=development webpack --mode development",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "test": "cross-env NODE_ENV=test ava",
    "lint": "eslint --init"
  },
  "keywords": [
    "reaktor",
    "2018",
    "summer"
  ],
  "author": "Jami Kousa",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.17.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "mongoose": "^5.0.7",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "semantic-ui-react": "^0.78.2",
    "webpack": "^4.0.0",
    "webpack-cli": "^2.0.9",
    "webpack-dev-middleware": "^2.0.6",
    "webpack-hot-middleware": "^2.21.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "mockgoose": "^7.3.5",
    "nodemon": "^1.15.1",
    "sinon": "^4.4.2",
    "supertest": "^3.0.0"
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-2"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "client/*"
    ]
  },
  "ava": {
    "files": [
      "client/**/*.spec.js",
      "server/**/*.spec.js"
    ],
    "source": [
      "client/**/*.js",
      "server/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": true,
    "compileEnhancements": false,
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        4
      ],
      "linebreak-style": "off",
      "react/jsx-filename-extension": "off",
      "react/jsx-indent": "off",
      "react/prop-types": "off",
      "react/jsx-indent-props": "off",
      "react/no-did-mount-set-state": "off"
    }
  }
}
